@model IEnumerable<Produit>

@{
    ViewData["Title"] = "ListProduit";
}
<div class="container p-3">
@if(Model==null)
{
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Produit List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Produit" asp-action="Create" class="btn btn-primary">
                    New Produit
                </a>
            </div>
        </div>
        <p class="text-center">There are no Product</p>
}
else
{
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Produit List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Produit" asp-action="Create" class="btn btn-primary">
                    New Produit
                </a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prix)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prix)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>