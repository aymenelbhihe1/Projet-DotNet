@model IEnumerable<Gestion_De_Stock.Models.Commande>

@{
    ViewData["Title"] = "ListCommande";
}
<div class="container p-3">
@if(Model==null)
{
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Commande List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Commande" asp-action="Create" class="btn btn-primary">
                     New Commande
                </a>
            </div>
        </div>
        <p class="text-center">There are no Commandes</p>
}
else
{
     <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> Commande List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Commande" asp-action="Create" class="btn btn-primary">
                     New Commande
                </a>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Client)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fournisseur)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.NomComplet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fournisseur.NomCompletF)
                        </td>
                        <td>
                            @item.Date.ToShortDateString()
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
</div>
