@model IEnumerable<Gestion_De_Stock.Models.LigneCommande>

@{
    ViewData["Title"] = "ListLigneCommande";
}
<div class="container p-3">
@if(Model == null)
{
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">  List De Ligne de Commande</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="LigneCommande" asp-action="Create" class="btn btn-primary">
                 New Ligne De Commandes
            </a>
        </div>
    </div>
    <p class="text-center">There are no Ligne De Commandes</p>

}
else
{
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">  List De Ligne de Commande</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="LigneCommande" asp-action="Create" class="btn btn-primary">
                    New Ligne De Commandes
                </a>
            </div>
        </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Produit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Commande)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produit.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commande.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
</div>

